<% if action == :edit %>
  <% action_url = cat_url(cat) %>
<% else %>
  <% action_url = cats_url %>
<% end %>


<form action="<%=action_url%>" method ="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label>
    <strong>Name:</strong>
    <input id ="name" type ="text" name="cat[name]" value="<%= cat.name %>" >
  </label>
  <br>
  <label>Birth date
    <input type="date" name="cat[birth_date]"value="<%= cat.birth_date %>"/>
  </label>
<br>
  <label for="color">Color</label>
  <select id="color" name="cat[color]">
    <option disabled "selected"%>>-- Please Select --</option>
    <option value="black" <%= cat.color == "black" ? "selected" : ""%>>Black</option>
    <option value="brown" <%= cat.color == "brown" ? "selected" : ""%> >Brown</option>
    <option value="white" <%= cat.color == "white" ? "selected" : ""%> >White</option>
    <option value="hairless" <%= cat.color == "hairless" ? "selected" : ""%>>Hairless</option>
    <option value="calico" <%= cat.color == "calico" ? "selected" : ""%>>Calico</option>
  </select>

<br>
  <label for="Sex">sex</label>
  <br>

  <input type="radio" name="cat[sex]" value="M" <%= cat.sex == "M" ? "checked='checked'" : ""%>> Male<br>
  <input type="radio" name="cat[sex]" value="F" <%= cat.sex == "F" ? "checked='checked'" : ""%>> Female<br>
<br>
<label for="description">Description</label>
<textarea name="cat[description]">
<%=cat.description %>
</textarea>
<br>
<input type="submit" value="<%= action == :edit ? 'edit cat' : 'add cat'%>"></input>

</form>
